      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnet301vnetName')]",
      "location": "[parameters('vnet301locationName')]",
      "tags": { "displayName": "AzureFoundation VNet Definition" },
      "properties": {
        "addressSpace": { "addressPrefixes": [ "[parameters('vnet301vnetAddressPrefix')]" ] },
        "dhcpOptions": { "dnsServers": "[parameters('vnet301dnsServers')]" },
        "subnets": [

